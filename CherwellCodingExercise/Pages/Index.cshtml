@page
@model IndexModel
@{
    ViewData["Title"] = "Mark Edmunds - Cherwell Coding Exercise";
}

<div>
    <h1 class="display-4">Triangle Coordinate Lookup</h1>
    <div id="errors"></div>
    <form id="get_triangle" class="form-inline needs-validation">
        <div class="form-group mx-sm-3 mb-2">
            <label for="row" class="sr-only">Row</label>
            <select id="row" class="form-control" required>
                <option value="" disabled selected hidden>Select Row</option>
            </select>
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <label for="column" class="sr-only">Column</label>
            <select id="column" class="form-control" required>
                <option value="" disabled selected hidden>Select Column</option>
            </select>
        </div>
        <div class="btn-group" role="group">
            <button type="submit" class="btn btn-primary mb-2">Get Triangle</button>
            <button type="button" id="clear" class="btn btn-secondary mb-2">reset</button>
        </div>
    </form>
    <div id="triangle_response" class="alert collapse" role="alert"></div>
</div>

